            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/wheatandefo"
            android:gravity="left|center_vertical"
            android:text="       wheat \u0026 efo"
            android:onClick="setOrder"
            />
    </LinearLayout>

</ScrollView>