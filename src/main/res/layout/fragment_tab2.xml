            android:id="@+id/ebaEgu"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/ebaandehusi"
            android:gravity="left|center_vertical"
            android:text="        eba \u0026 egusi"
            android:onClick="setOrder"
            />
        <Button
            android:id="@+id/amaewe"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/amalaandewedu"
            android:gravity="left|center_vertical"
            android:text="       amala \u0026 ewedu"
            android:onClick="setOrder"
            />
        <Button
            android:id="@+id/amagbe"
