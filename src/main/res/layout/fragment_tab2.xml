            android:gravity="left|center_vertical"
            android:text="       Pounded Yam"
            android:onClick="setOrder"
            />
        <Button
            style="@style/Widget.AppCompat.Button.Borderless"
            android:id="@+id/amaEfo"
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/amalaandefo"
            android:gravity="left|center_vertical"
            android:text="       Amala \u0026 efo"
            android:onClick="setOrder"
            />
        <Button
            android:id="@+id/ebaEfo"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/ebaandefo"
            android:gravity="left|center_vertical"
            android:text="       Eba \u0026 efo"
            android:onClick="setOrder"
            />
