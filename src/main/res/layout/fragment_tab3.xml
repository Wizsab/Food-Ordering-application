<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Tab3">


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp">
        <Button
            android:id="@+id/meatPie"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:drawableLeft="@drawable/meatpie"
            android:gravity="left|center_vertical"
            android:text="       Meat pie"
            android:onClick="setOrder"
            />
        <Button
            style="@style/Widget.AppCompat.Button.Borderless"
            android:id="@+id/scotch"
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/scotchegg"
            android:gravity="left|center_vertical"
            android:text="       Scotch egg"
            android:onClick="setOrder"
            />
        <Button
            android:id="@+id/plan"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/plantainandeggs"
            android:gravity="left|center_vertical"
            android:text="      dodo \u0026 eggs"
            android:onClick="setOrder"
            />
        <Button
            android:id="@+id/beans1"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/beansandplantain"
            android:gravity="left|center_vertical"
            android:text="        beans \u0026 dodo"
            android:onClick="setOrder"
            />
        <Button
            android:id="@+id/moinmoin1"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/moinmoin"
            android:gravity="left|center_vertical"
            android:text="       moinmoin"
            android:onClick="setOrder"
            />
    </LinearLayout>

</ScrollView>